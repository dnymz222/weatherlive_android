<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapselectActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >




        <TextView
            android:id="@+id/baichuan_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textColor="#fff"
            android:textSize="32dp"
            android:layout_gravity="left"


            android:maxLines="1"
            android:layout_centerHorizontal ="true"
            android:tag="0"
            android:visibility="visible"/>



        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/map_search"
            app:defaultQueryHint="输入城市或区县名"
            app:queryHint="输入城市或区县名"

            android:visibility="visible"
            android:background="@drawable/cornergray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />



    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/result_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"

        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/result_cyclerview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"

            />
        <com.amap.api.maps2d.MapView
            android:id="@+id/map"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_above="@id/result_cyclerview"

            >

        </com.amap.api.maps2d.MapView>

    </RelativeLayout>









</RelativeLayout>